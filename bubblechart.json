{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 300,
    "title": "Age distribution of chess players across countries",
    "data":{
      "url": "https://raw.githubusercontent.com/Neeva-shinie/Neeva-shinie.github.io/master/datasets/test.csv"
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "x":{
                  "field":"Age Avg",
                  "type": "quantitative",
                  "title": "Age",
                  "axis": {"tickCount":7},
                  "scale":{"type": "linear", "domain":[20,60]}
                    
                },
                "y":{
                  "field": "Num Players",
                  "type": "quantitative",
                  "title": "Players",
                  "axis": {"tickCount": 7},
                  "scale":{"type": "linear", "domain":[100,40000]}
                },
                "color":{
                    "field": "Country",
                    "type": "nominal",
                    "scale": {
                      "domain": [
                        "Russia",
                        "India",
                        "Germany",
                        "Spain",
                        "France",
                        "Poland",
                        "Italy",
                        "Iran",
                        "Turkey",
                        "United States of America",
                        "Hungary",
                        "Greece",
                        "Brazil",
                        "Serbia",
                        "Romania",
                        "Ukraine",
                        "Netherlands",
                        "Argentina",
                        "Greenland",
                        "Slovakia",
                        "Sweden"
                      ]
                    }  
                },
                "size":{
                  "field": "Num Players",
                  "type": "quantitative",
                  "title": "Number of Players"

                },
                "opacity":{"value": 0.6},
                "tooltip": [
                    {"field": "Num Players", "type": "quantitative", "title":"Players"},
                    {"field": "Country", "type":"nominal"},
                    {"field": "Age Avg", "type": "quantitative" , "title": "Age"}
                ]
            }
        },
        {
            "mark":{
                "type": "text",
                "align":"center",
                "baseline":"top",
                "dx": -120,
                "dy": -140,
                "fontSize": 11.5,
                "fontStyle": "italic",
                "fontWeight":"normal",
                "text": "India has the youngest average chess player"
            }
        }
    ],
    "params": [
        {
          "name": "Country_selection",
          "bind":{
            "input": "select",
            "options": [
              null,
              "Russia",
              "India",
              "Germany",
              "Spain",
              "France",
              "Poland",
              "Italy",
              "Iran",
              "Turkey",
              "United States of America"
            ],
            "labels": [
              "Show All",
              "Russia",
              "India",
              "Germany",
              "Spain",
              "France",
              "Poland",
              "Italy",
              "Iran",
              "Turkey",
              "United States of America"
            ],
            "name": "Selection of top 10 countries with most players "
          }
        }
      ],
      "transform": [
        {"filter": "Country_selection == null || datum.Country == Country_selection" }
    ]


}