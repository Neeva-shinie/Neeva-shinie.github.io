{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title":{ "text":"Percentage of male and female in FIDE ranking", "align": "center"},
    "height": 300,
    "width": 300,
    "background":"lightgray",
    "data": {
      "url": "https://raw.githubusercontent.com/Neeva-shinie/Neeva-shinie.github.io/master/datasets/test.csv"
    },
    "transform": [
        {
          "aggregate": [
            { "op": "sum", "field": "FMs", "as": "FMs" },
            { "op": "sum", "field": "WFMs", "as": "WFMs" }
          ]
        },
        { "calculate": "datum.FMs + datum.WFMs", "as": "total" },
        { "calculate": "(datum.FMs / datum.total) * 100", "as": "FMs" },
        { "calculate": "(datum.WFMs / datum.total) * 100", "as": "WFMs" },
        { "fold": ["FMs", "WFMs"], "as": ["key", "value"] }
      ],
      "mark": {
        "type": "arc",
        "tooltip": true,
        "innerRadius": 60,
        "outerRadius": 100
      },
      "encoding": {
        "theta": { "field": "value", "type": "quantitative" },
        "color": {
          "field": "key",
          "title": "Gender",
          "type": "nominal",
          "scale": {
            "domain": ["FMs", "WFMs"],
            "range": ["#00008B", "#FFFF00"]
          }
        },
        "stroke": { "value": "black" },
        "strokeWidth": { "value": 1 },
        "tooltip": [
          { "field": "key", "type": "nominal", "title": "Rank" },
          {
            "field": "value",
            "type": "quantitative",
            "format": ".1f",
            "title": "Percentage"
          }
        ]
    }
}
