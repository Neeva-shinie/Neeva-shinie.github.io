{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 200,
    "width": "container",
    "background":"#c7c7c7",
    "config": {
      "view": {
        "stroke": "transparent"
      }
    },
    "data": {
      "url": "https://raw.githubusercontent.com/Neeva-shinie/Neeva-shinie.github.io/master/datasets/test.csv"
    },
    "params": [{
      "name": "arcs",
      "select": "point"
    }],
    "transform": [
        {
          "aggregate": [
            { "op": "sum", "field": "FMs", "as": "FMs" },
            { "op": "sum", "field": "WFMs", "as": "WFMs" }
          ]
        },
        { "calculate": "datum.FMs + datum.WFMs", "as": "total" },
        { "calculate": "(datum.FMs / datum.total) * 100", "as": "FMs" },
        { "calculate": "(datum.WFMs / datum.total) * 100", "as": "WFMs" },
        { "fold": ["FMs", "WFMs"], "as": ["key", "value"] }
      ],
      "mark": {
        "type": "arc",
        "tooltip": true,
        "innerRadius": 50,
        "outerRadius": 85
      },
      "encoding": {
        "theta": { "field": "value", "type": "quantitative" },
        "color": {
          "condition": {
            "param": "arcs",
            "field": "key",
            "type": "nominal",
            "scale": {
              "domain": ["FMs", "WFMs"],
              "range": ["#00008B", "#FFFF00"]
            },
            "value": "gray"
          },
          "field": "key",
          "title": "Gender",
          "type": "nominal"
        },
        "stroke": { "value": "black" },
        "strokeWidth": { "value": 1 },
        "tooltip": [
          { "field": "key", "type": "nominal", "title": "Rank" },
          {
            "field": "value",
            "type": "quantitative",
            "format": ".1f",
            "title": "Percentage"
          }
        ]
    }
}
