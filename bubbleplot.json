{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 300,
  "title": "Age distribution of chess players across countries",
  "data":{
    "url": "https://raw.githubusercontent.com/Neeva-shinie/Neeva-shinie.github.io/master/test.csv"
  },
    "mark": "bar",
    "encoding": {
      "x":{
        "field":"Age Avg",
        "type": "quantitative",
        "title": "Age",
        "axis": {"tickCount":7},
        "scale":{"type": "linear", "domain":[20,60]}
      },
      "y":{

        "field": "Num Players",
        "type": "quantitative",
        "title": "Players"
      },

      "color":{
        "field": "Country",
        "type": "nominal"
      },
      "size":{
        "field": "Num Players",
        "type": "quantitative"
      },
      "tooltip": [
        {"field": "Country", "type":"nominal"},
        {"field": "Age Avg", "type": "quantitative" , "title": "Age"},
        {"field": "Num Players", "type": "quantitative", "title":"Players"}
      ]
    },
  "params": [
    {
      "name": "Country_selection",
      "bind":{
        "input": "select",
        "options": [
          null,
          "Russia",
          "India",
          "Germany",
          "Spain",
          "France",
          "Poland",
          "Italy",
          "Iran",
          "Turkey",
          "United States of America"
        ],
        "labels": [
          "Show All",
          "Russia",
          "India",
          "Germany",
          "Spain",
          "France",
          "Poland",
          "Italy",
          "Iran",
          "Turkey",
          "United States of America"
        ],
        "name": "Selection of top 10 countries with most players "
      }
    }
  ],
  "transform": [
    {"filter": "Country_selection == null || datum.Country == Country_selection" }
  ]
  





}