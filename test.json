{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "data": {"url": "https://raw.githubusercontent.com/Neeva-shinie/Neeva-shinie.github.io/master/datasets/test.csv"},
  "title": "FIDE Ranking of players across countries",
  "height": 300,
  "width": 500,
  "layer":[
    {
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Country",
          "type": "ordinal",
          "scale":{
            "domain":[
              "Russia",
              "India",
              "Germany",
              "Spain",
              "France",
              "Poland",
              "Italy",
              "Iran",
              "Turkey",
              "United States of America",
              "Hungary",
              "Greece",
              "Brazil",
              "Serbia",
              "Romania",
              "Ukraine",
              "Netherlands",
              "Argentina",
              "Greenland",
              "Slovakia",
              "Sweden"
            ]
          },
          "axis": {"title": ""}
        },
        "x": {
          "field": "FIDE Average",
          "type": "quantitative",
          "axis": {"title": ""}
        },
        "color": {
          "field": "FIDE Average",
          "type": "quantitative",
          "aggregate": "sum",
          "scale": {"scheme": "oranges"},
          "title": "The frequency of opening plays"
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title":"Country"},
          {"field": "FIDE Average", "type": "quantitative", "title": "FIDE rank"}
        ]
      }



    }

  ]

}
  