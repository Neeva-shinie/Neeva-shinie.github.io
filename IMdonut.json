{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 200,
    "width": "container",
    "background":"#c7c7c7",
    "config": {
      "view": {
        "stroke": "transparent"
      }
    },
    "data": {
      "url": "https://raw.githubusercontent.com/Neeva-shinie/Neeva-shinie.github.io/master/datasets/test.csv"
    },
    "transform": [
        {
          "aggregate": [
            { "op": "sum", "field": "IMs", "as": "IMs" },
            { "op": "sum", "field": "WIMs", "as": "WIMs" }
          ]
        },
        { "calculate": "datum.IMs + datum.WIMs", "as": "total" },
        { "calculate": "(datum.IMs / datum.total) * 100", "as": "IMs" },
        { "calculate": "(datum.WIMs / datum.total) * 100", "as": "WIMs" },
        { "fold": ["IMs", "WIMs"], "as": ["key", "value"] },
        {"calculate": "cos(2*PI*(datum.cum-datum.value/2)/datum.total)", "as": "y"},
        {"calculate": "sin(2*PI*(datum.cum-datum.value/2)/datum.total)", "as": "x"}
      ],
      "layer": [{"mark": {
        "type": "arc",
        "tooltip": true,
        "innerRadius": 50,
        "outerRadius": 85
      },
      "encoding": {
        "theta": { "field": "value", "type": "quantitative" },
        "color": {
          "field": "key",
          "type": "nominal",
          "title": "Gender",
          "scale": {
            "domain": ["IMs", "WIMs"],
            "range": ["#800000", "#228B22"]
          }
        },
        "stroke": { "value": "black" },
        "strokeWidth": { "value": 1 },
        "tooltip": [
          { "field": "key", "type": "nominal", "title": "Gender" },
          {
            "field": "value",
            "type": "quantitative",
            "format": ".1f",
            "title": "Percentage"
          }
        ]
    }}
  ]
}