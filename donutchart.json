{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Percentage of male and female in Chess ranking",
  "height": 300,
  "width": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/Neeva-shinie/Neeva-shinie.github.io/master/test.csv"
  },
  "layer": [
    {
      "transform": [
        {
          "aggregate": [
            { "op": "sum", "field": "GMs", "as": "GMs" },
            { "op": "sum", "field": "WGMs", "as": "WGMs" }
          ]
        },
        { "calculate": "datum.GMs + datum.WGMs", "as": "total" },
        { "calculate": "(datum.GMs / datum.total) * 100", "as": "GMs" },
        { "calculate": "(datum.WGMs / datum.total) * 100", "as": "WGMs" },
        { "fold": ["GMs", "WGMs"], "as": ["key", "value"] }
      ],
      "mark": {
        "type": "arc",
        "tooltip": true,
        "innerRadius": 50,
        "outerRadius": 100
      },
      "encoding": {
        "theta": { "field": "value", "type": "quantitative" },
        "color": {
          "field": "key",
          "type": "nominal",
          "scale": {
            "domain": ["GMs", "WGMs"],
            "range": ["#FF0000", "#000000"]
          }
        },
        "stroke": { "value": "grey" },
        "strokeWidth": { "value": 1 },
        "tooltip": [
          { "field": "key", "type": "nominal", "title": "Title" },
          {
            "field": "value",
            "type": "quantitative",
            "format": ".1f",
            "title": "Percentage"
          }
        ]
      }
    }
  ]
}
